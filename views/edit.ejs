<% include ./partials/header %>

<div class="ui main segment text container outercolored">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <div class="ui top attached segment">

    <form action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field required">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" required><%= blog.body %></textarea>
        </div> 
        <input type="submit" class="ui red fluid button">
    </form>   
    </div> 
</div>


<% include ./partials/footer %>