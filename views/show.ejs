<% include ./partials/header %>

<div class="ui main text container segment outercolored" id="show-container">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui red label floating">
            <span><%= blog.created.toDateString() %></span>
        </div>

    <div class="ui top attached segment">
        <div class="item">
            <img src="<%= blog.image %>" alt="" class="ui centered rounded image">
        </div>
        <div class="description" id="show-body">
            <p><%- blog.body %></p>
        </div>
        <div class="likes">
            <a class="ui label">
                Likes
                <i class="thumbs up icon"></i>
            </a>
            
            <a class="ui label">
                Dislikes
                <i class="thumbs down icon"></i>
            </a>
            
        </div>
        <div class="ui horizontal divider seperator">
                <i class="football ball icon brown"></i>
        </div>

        <a href="/blogs/<%= blog._id %>/edit" class="ui button fluid black">Edit</a>
        <div class="ui horizontal divider">
                <i class="football ball icon brown"></i>
        </div>

        <form id="deleteForm" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
            <button class="ui red fluid button">Delete</button>
        </form>
    </div>
</div>



<% include ./partials/footer %>