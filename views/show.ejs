<% include ./partials/header %>

<div class="ui main container segment outercolored" id="show-container">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui red label floating">
            <span><%= post.created.toDateString() %></span>
        </div>

    <div class="ui top attached segment">
        <div class="item">
            <img src="<%= post.image %>" alt="" class="ui centered rounded image">
        </div>
        <div class="description" id="show-body">
            <p><%- post.body %></p>
        </div>
        <div class="likes">
            <a class="ui label button">
                Likes
                <i class="thumbs up icon"></i>
            </a>
            
            <a class="ui label button">
                Dislikes
                <i class="thumbs down icon"></i>
            </a>
            
        </div>
        <div class="ui horizontal divider seperator">
                <i class="football ball icon brown"></i>
        </div>

        <a href="/posts/<%= post._id %>/edit" class="ui button fluid black">Edit</a>
        <div class="ui horizontal divider">
                <i class="football ball icon brown"></i>
        </div>

        <form id="deleteForm" method="POST" action="/posts/<%= post._id %>?_method=DELETE">
            <button class="ui red fluid button">Delete</button>
        </form>
        <div class="ui horizontal divider">
                <i class="football ball icon brown"></i>
        </div>
        <div class="ui text container segment" id="comments-container">


            <h3 class="ui header white">Comments</h3>
            <div class="ui top attached segment">
                <div class="item">

                    <% post.comments.forEach(function(comment){ %>
                        <p><%= comment.text %></p>
                        <p><strong><%= comment.author %></strong> -  <span><%= comment.added.toDateString() %></span> </p>
                    <% }) %>      
                </div>
            </div>
        </div>
    </div>
</div>



<% include ./partials/footer %>