<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui label basic small top right attached">
            <span><%= blog.created.toDateString() %></span>
        </div>

    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image %>" alt="" class="ui centered rounded image">
        </div>
        <div class="description">
            <p><%- blog.body %></p>
        </div>
        <div class="ui horizontal divider">
                <i class="football ball icon brown"></i>
        </div>

        <a href="/blogs/<%= blog._id %>/edit" class="ui button fluid black">Edit</a>
        <div class="ui horizontal divider">
                <i class="football ball icon brown"></i>
        </div>

        <form id="deleteForm" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
            <button class="ui red fluid button">Delete</button>
        </form>
    </div>
</div>



<% include ./partials/footer %>